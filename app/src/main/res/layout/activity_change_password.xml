<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/changing_email_border"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/inner_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_input1"
            android:layout_marginStart="20dp"
            android:background="@drawable/textlines"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toTopOf="@id/inner_view">
            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Old Password"
                app:layout_constraintTop_toTopOf="@id/inner_view"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_input2"
            android:layout_marginStart="20dp"
            android:background="@drawable/textlines"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@id/text_input1">
        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="New Password"
            app:layout_constraintTop_toBottomOf="@id/text_input1"
            android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_input3"
            android:layout_marginStart="20dp"
            android:background="@drawable/textlines"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@id/text_input2">
        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Confirm Password"
            app:layout_constraintTop_toBottomOf="@id/editText3"
            android:background="@android:color/transparent"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>